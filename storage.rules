rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ===== Profile Photos =====
    // ผู้ใช้อัปโหลดและอ่านรูปตัวเองได้ / คนอื่นอ่านได้อย่างเดียว
    match /users/{userId}/profile/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // max 5MB
        && request.resource.contentType.matches('image/.*');
    }
    
    // ===== Documents (ใบประกอบวิชาชีพ, บัตรประชาชน) =====
    // เจ้าของเท่านั้นที่อัปโหลด / เจ้าของ+admin อ่านได้
    match /users/{userId}/documents/{fileName} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true
      );
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024; // max 10MB
    }
    
    // ===== Chat Attachments =====
    // ผู้ใช้ที่ล็อกอินส่งไฟล์ในแชทได้ / อ่านได้ทุกคนที่ล็อกอิน
    match /chats/{conversationId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024; // max 10MB
    }
    
    // ===== Job Images =====
    match /jobs/{jobId}/{fileName} {
      allow read: if true; // งานเปิดให้ทุกคนดู
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }
    
    // ===== ปฏิเสธทุกอย่างอื่น =====
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
